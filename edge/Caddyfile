{
  auto_https off
}
:8080 {
  encode zstd gzip
  header Access-Control-Allow-Origin "*"
  @hls path_regexp hls \.m3u8|\.ts$
  handle @hls {
    # HMAC signature validation is handled by the Fastify application
    # This proxy simply forwards requests that have already been validated
    reverse_proxy https://s3.wasabisys.com
  }
  handle {
    respond 404
  }
}
